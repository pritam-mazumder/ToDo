<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Onboarding3Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/onboading3" />

    <ImageView
        android:layout_width="94.83dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginVertical="50dp"
        app:srcCompat="@drawable/nav3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/orgonaize_y"
        android:textAlignment="center"
        android:textAppearance="@style/manage_your" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="5sp"
        android:text="@string/you_can_org"
        android:textAlignment="center"
        android:textAppearance="@style/you_can_eas" />

</LinearLayout>